	SqlDataReader myReaderUltimasFac = commandUltimasFac.ExecuteReader();
	SqlDataReader myReaderUltimosPagosc = commandUltimosPagos.ExecuteReader();
	SqlDataReader myReaderProductos = commandProductos.ExecuteReader();
}
